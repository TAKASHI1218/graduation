
<%= form_with(model: @food, local: true) do |form| %>
  <% if @food.errors.any? %>
    <div id="error_explanation">
      <h2><%= @food.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @food.errors.full_messages.each do |msg| %>
        <li><%=msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="food_name">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="food_picture">
    <%= form.label :picture%>
    <%= form.file_field :picture %>
    <% if @food.picture.url %>
      <%= image_tag @food.picture.url,:width => '25%', :height => '25%'  %>
    <% end %>
    <br>

  </div>
  <div class="food_price">
    <%= form.label :price %>
    <%= form.number_field(:price, in: 1..99999, step: 1.0) %>
  </div>




  <%= form.submit %>
<% end %>

<%= link_to "焼き鳥一覧画面に戻る", foods_path %>
