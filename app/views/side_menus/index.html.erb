<div class ="main-container-side_menu">



<h1>サイドメニュー一覧</h1>

<div side_menu>
<table>
  <thead>
  <tr>
    <th>おしなもの</th>
    <th>値段</th>
    <th>ひとこと</th>
    <th>写真</th>

  </tr>
  </thead>


  <tbody>
<% @side_menus.each do |side_menu| %>
  <tr>
    <td><%= side_menu.name %></td>

    <td><%= side_menu.price %></td>
    <td><%= side_menu.comment %></td>
    <td><% if side_menu.picture && side_menu.picture.url %>
          <%= link_to '🐓', side_menu_path(side_menu.id) %>
        <% else %>
          <%= "" =%>
        <% end %>
    </td>
    <% if current_user == nil %>
    <% elsif current_user.admin %>
      <td><%= link_to 'サイドメニューを編集する', edit_side_menu_path(side_menu.id), data: { confirm: '本当に編集していいですか？' } %></td>
      <td><%= link_to 'サイドメニューを削除する', side_menu_path(side_menu.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
    <% end %>


  </tr>
<% end %>
</tbody>
</table>
</div_side_menu>

<br>
<% if current_user == nil %>
<% elsif current_user.admin %>
  <%=link_to '新しくサイドメニューを登録する', new_side_menu_path %>
<% end %>
</div>
