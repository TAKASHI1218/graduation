<h1>ブログ一覧</h1>


<table>
  <tr>
    <th>ユーザー</th>
    <th>タイトル</th>
    <th>コメント</th>
    <th>写真</th>

  </tr>

<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.user.name %></td>

    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <td><% if blog.picture && blog.picture.url %>
          <%= link_to '写真', blog_path(blog.id) %>
        <% else %>
          <%= "" =%>
        <% end %>
    </td>
    <% if user_signed_in? %>
      <td><%= link_to 'ブログを編集する', edit_blog_path(blog.id), data: { confirm: '本当に編集していいですか？' } %></td>
      <td><%= link_to 'ブログを削除する', blog_path(blog.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
    <% end %>


  </tr>
<% end %>
</table>

<br>
<% if user_signed_in? %>
  <%=link_to 'ブログを登録する', new_blog_path %>
<% end %>
