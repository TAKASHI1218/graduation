<h1>ブログ一覧</h1>

<br>
<%= link_to '優先順位でソートする', blogs_path(sort_priority: "true") %>
<br>
<%= link_to '終了期限でソートする', blogs_path(sort_cut_off_date: "true") %>
<br>
<%= link_to '入力された順でソートする', blogs_path(sort_created: "true") %>




<table>
  <tr>
    <th>ユーザー</th>
    <th>タイトル</th>
    <th>コメント</th>
    <th>写真の有無</th>
    <th>作成日</th>
    <th>状態</th>
    <th>優先度</th>
    <th>期限</th>
    <th>詳細確認<br>コメント入力<br>ボタン</th>

  </tr>

<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.user.name %></td>

    <td><%= blog.title %></td>
    <td><%= blog.content %></td>

    <td><% if blog.picture.url %>
      <%=  '★'%>
        <% else %>
      <%=   'なし'%>
        <% end %>
    </td>


    <td><%= blog.created_at %></td>
    <td><%= blog.status %></td>
    <td><%= blog.priority %></td>
    <td><%= blog.cut_off_date %></td>
    <td><%= link_to '詳細', blog_path(blog.id) %></td>

    <% if user_signed_in? %>
      <td><%= link_to 'ブログを編集する', edit_blog_path(blog.id), data: { confirm: '本当に編集していいですか？' } %></td>
      <td><%= link_to 'ブログを削除する', blog_path(blog.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
    <% end %>


  </tr>
<% end %>
</table>





<br>
<% if user_signed_in? %>
  <%=link_to 'ブログを登録する', new_blog_path %>
<% end %>
