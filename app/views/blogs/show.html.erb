<div class="blogshowbody">
  <div class="blogeachtitle">
　<p1>詳細画面</p1>
  </div>
  <br>
  <button type="button" class="btn btn-success rounded-pill">
  <%= link_to '業務連絡一覧へ戻る', blogs_path %></button>


  <div class="blog-text">
    <table>
    <p><strong>タイトル</strong>：<%= @blog.title %></p>
    <p><strong>内容</strong>：<%= @blog.content %></p>

    <p><strong>写真</strong>：
      <% if  @blog.picture.url %>
      <button type="button" class="btn btn-link" data-toggle="modal" data-target="#exampleModalCenter-<%= @blog.id %>">
      <%=  '🐓' %>
    <% else %>
      <%= '写真はありません'%>
    <% end %>
      </button>
    <div class="modal fade" id="exampleModalCenter-<%= @blog.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle-<%= @blog.id %>" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="閉じる">
                <span aria-hidden="true">&times;</span>
              </button>
          </div>
            <div class="modal-body">
              <div class="modalpicture">
                <p>
                  <% if  @blog.picture.url %>
                  <%= image_tag @blog.picture.url ,:width => '100%', :height => '100%' %></p>
                  <% elsif @blog.picture.url == nil %>
                  <% end %>
              </div>
            </div>
          <div class="modal-footer">
          </div>
        </div>
      </div>
    </div>

    <table class="table table-hover">
      <tr>
        <th>完了予定日</th>
        <th>優先度</th>

      </tr>
      <tr>
        <td><%= @blog.visit_date %></td>
        <td><%= @blog.status %></td>

      </tr>
    </table>
  </div>
  <div class="jumbotron jumbotron-fluid">
  <p1 class="comment_board">コメント一覧</p1>
  <br>
  <br>


  <div id="comments_area">
    <%= render partial: 'comments/index', locals: { comments: @comments, blog: @blog } %>
  </div>
  <% if current_user == nil %>
  <% elsif current_user %>
  <%= render partial: 'comments/form', locals: { comment: @comment, blog: @blog } %>
  <% end %>

  </div>


</div>
