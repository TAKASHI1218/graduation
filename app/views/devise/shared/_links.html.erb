<div class="omniauthlogin1">
  <i class="fab fa-google fa-lg">
    <%= link_to "Googleアカウントでログイン", user_google_omniauth_authorize_path %></i><br>
</div>
<div class="omniauthlogin2">
  <i class="fab fa-facebook-square fa-lg">
    <%= link_to "facebookアカウントでログイン", user_facebook_omniauth_authorize_path %></i><br>
</div>
<%- if devise_mapping.registerable? && controller_name != 'registrations' %><br>
  <button class="loginbutton">
  <%= link_to "新規登録", new_registration_path(resource_name) %></button><br/>
<% end %>
<%- if controller_name != 'sessions' %>
  <button class="loginbutton">
    <%= link_to "ログイン", new_session_path(resource_name) %>
  </button><br>
<% end %>
<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <button class="loginbutton">
  <%= link_to "パスワード確認", new_password_path(resource_name) %><br/>
<% end %>
</button>


<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br/>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br/>
<% end %>
