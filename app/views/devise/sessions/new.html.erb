<div class="loginbody">
  <div class='blogtitle'>
    <p1>T o r i y u u - notice board</p1><br>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <p1 class="logintitle">ログイン</p1><br>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %><br>
  </div>
  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード" %><br>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit "ログイン", class: 'submitbuttonforlogin' %><br>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
