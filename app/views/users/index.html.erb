<div class="usersbody">
<h3>会員一覧</h3>


<table  class="table table-hover">
  <tr>
    <th>名前</th>
    <th>Email</th>
    <th>管理者</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><% if user.admin %>
          <%=  '🐓' %>
        <% end %>
    </td>
  </tr>
<% end %>


</table>
<button type="button" class="btn btn-success rounded-pill">
<%= link_to "Toriyuu - notice board へ", blogs_path %></button>
</div>
